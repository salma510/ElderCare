<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="12dp">

    <!-- Image à gauche pour le test -->
    <ImageView
        android:id="@+id/imgTestIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/test_bilan"
        android:layout_marginEnd="12dp"
        android:contentDescription="Icône du test" />

    <!-- Conteneur de texte -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNomTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Test"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textValeurTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valeur"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Boutons Modifier et Supprimer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Modifier"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center"
            app:tint="#4CAF50" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_test"
            android:contentDescription="Supprimer"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center"
            app:tint="#F44336" />
    </LinearLayout>
</LinearLayout>
